<div class="header-gradient"></div>
<div class="container signupLogin-content">
  <!-- Projects Row -->
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-lg-6 signin-page text-center">
       <h3>Welcome Back!</h3>
       <hr>
       <form class="text-left">
          <div class="form-group">
             <label for="exampleInputEmail1">Email address</label>
             <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
          </div>
          <div class="form-group">
             <label for="exampleInputPassword1">Password</label>
             <input type="password" class="form-control" id="" placeholder="Password">
          </div>
          
          <button type="submit" class="btn btn-default signin-btn">Sign In</button>
       </form>
       <div class="col-md-12 text-center">
          <p class="signinToLogin">Not yet a member? <strong><%= link_to "Sign Up", new_user_registration_path %></strong></p>
       </div>
    </div>
  </div>
</div>