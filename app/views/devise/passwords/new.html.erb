<% content_for :page_title do %>
	<%= 'Travelog - Forgot Password?' %>
<% end %>
<div class="header-gradient"></div>
<div class="container signupLogin-content">
  <!-- Projects Row -->
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-lg-6 signin-page text-center">
     
		<h3>Forgot your password?</h3>
		<hr>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:class => 'text-left' }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, :class=>'form-control' %>
          </div>

		  
		    <%= f.submit "Send Reset Link", :class=> 'btn btn-default signin-btn' %>
		 	
		<% end %>

		<div class="col-md-12 text-center">
          <p class="signinToLogin">Back to <strong><%= link_to "Sign In", new_user_session_path %></strong></p>
       </div>
		</div>
		</div>
		</div>
