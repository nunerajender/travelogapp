<%= render "shared/settings_nav", :obj => 'accounts' %>
<div class="side-collapse-container">
	<section class="header-11-sub profile-page">
		<div class="container">
			 <div class="row ">
					<%= render 'shared/accounts_nav' %>
					<div class="col-md-8">
						<!-- <div class="panel-header">
							Required
						</div> -->
						</div>
						<div class="col-md-8">
						 <div class="profile-details">
								<%= form_for @store_setting, url: {action: "accounts"}, :html => {:class => "form-horizontal profile-form" } do |f| %>
									<div class="form-group">
										<%= f.label :phone_hp, 'Phone number', :class=>"col-sm-3 control-label"  %>
											<div class="col-sm-9">
												 <%= f.text_field :phone_hp, :class => 'form-control', :placeholder => 'First Name' %>
											</div>
									</div>
									<div class="form-group">
										<%= f.label :store_username, 'Store Username', :class=>"col-sm-3 control-label"  %>
